{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "type": "node",
            "restart": true
        },
        {
            "name": "Launch with Nodemon",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/nodemon",
            "args": [
                "-r", "dotenv/config",
                "--inspect",
                "--watch", "src",
                "--exec", "babel-node src/index.js"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        }
    ]
}